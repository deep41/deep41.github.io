---
const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 backdrop-blur-glass border-b border-white/10 px-4 py-4 transition-all duration-300">
  <nav class="mx-auto flex max-w-[1200px] items-center justify-center">
    <div class="flex items-center space-x-8 font-medium text-base">
      <a
        href="/"
        class={`relative px-4 py-3 rounded-lg transition-all duration-300 hover:scale-105 interactive-hover ${
          currentPath === '/' 
            ? 'text-white bg-white/10 highlight-blue' 
            : 'text-gray-300 hover:text-white hover:bg-white/5'
        }`}
      >
        Home
        {currentPath === '/' && (
          <div class="absolute bottom-1 left-1/2 transform -translate-x-1/2 w-1 h-1 bg-blue-400 rounded-full animate-pulse-slow"></div>
        )}
      </a>
      <a
        href="/about"
        class={`relative px-4 py-3 rounded-lg transition-all duration-300 hover:scale-105 interactive-hover ${
          currentPath === '/about' 
            ? 'text-white bg-white/10 highlight-purple' 
            : 'text-gray-300 hover:text-white hover:bg-white/5'
        }`}
      >
        About
        {currentPath === '/about' && (
          <div class="absolute bottom-1 left-1/2 transform -translate-x-1/2 w-1 h-1 bg-purple-400 rounded-full animate-pulse-slow"></div>
        )}
      </a>
      <a
        href="/projects"
        class={`relative px-4 py-3 rounded-lg transition-all duration-300 hover:scale-105 interactive-hover ${
          currentPath === '/projects' 
            ? 'text-white bg-white/10 highlight-cyan' 
            : 'text-gray-300 hover:text-white hover:bg-white/5'
        }`}
      >
        Projects
        {currentPath === '/projects' && (
          <div class="absolute bottom-1 left-1/2 transform -translate-x-1/2 w-1 h-1 bg-cyan-400 rounded-full animate-pulse-slow"></div>
        )}
      </a>
      <a
        href="/contact"
        class={`relative px-4 py-3 rounded-lg transition-all duration-300 hover:scale-105 interactive-hover ${
          currentPath === '/contact' 
            ? 'text-white bg-white/10 highlight-green' 
            : 'text-gray-300 hover:text-white hover:bg-white/5'
        }`}
      >
        Contact
        {currentPath === '/contact' && (
          <div class="absolute bottom-1 left-1/2 transform -translate-x-1/2 w-1 h-1 bg-green-400 rounded-full animate-pulse-slow"></div>
        )}
      </a>
    </div>
  </nav>
</header>

 